<fieldset class="uk-fieldset">
  
  <label class="uk-form-label" for="text-content">
    {{t "text_settings.type"}}
  </label>
  <Ui::TypeSelect 
    @value={{@model.type}}
    @onChange={{fn (mut @model.type)}}
    data-test-settings-type
  />

  <div class="uk-margin">
    <label class="uk-form-label" for="text-content">
      {{t "text_settings.text"}}
    </label>
    <Ui::Input
      id="text-content"
      class="uk-input"
      @type="text"
      @value={{@model.text}}
      @onChange={{fn (mut @model.text)}}
      @debounce={{250}}
      data-test-settings-text
    />
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="text-size">
      {{t "text_settings.size"}}
    </label>
    <UkFlex @direction="row">
      <div class="uk-width-1-3">
        <Ui::Input
          id="text-size"
          class="uk-input"
          @type="number"
          @value={{@model.size}}
          @onChange={{fn this.setInt 'size'}}
          data-test-settings-size
        />
      </div>
    </UkFlex>
  </div>

  <div class="uk-margin">
    
    <label class="uk-form-label" for="text-height">
      {{t "text_settings.height"}}
    </label>
    <UkFlex @direction="row" class="uk-flex-middle">
      <div class="uk-width-1-3">
        <Ui::Input
          id="text-height"
          class="uk-input"
          @type="number"
          @value={{@model.height}}
          @onChange={{fn this.setInt 'height'}}
          data-test-settings-height
        />
      </div>
      <div>&nbsp;</div>
      <div>
        <label class="uk-form-label">
          {{t "mm_unit"}}
        </label>
      </div>
    </UkFlex>
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="text-spacing">
      {{t "text_settings.kerning"}}
    </label>
    <UkFlex @direction="row" class="uk-flex-middle">
      <div class="uk-width-1-3">
    <Ui::Input
      id="text-spacing"
      class="uk-input"
      @type="number"
      @value={{@model.spacing}}
      @onChange={{fn this.setInt 'spacing'}}
      data-test-settings-spacing
    />
      </div>
      <div>&nbsp;</div>
      <div>
        <label class="uk-form-label">
          {{t "mm_unit"}}
        </label>
      </div>
    </UkFlex>
  </div>

  {{#if this.showSupportSettings}}

    <div class="uk-margin">
      <label class="uk-form-label" for="text-spacing">
        {{t "text_settings.supportHeight"}}
      </label>
      <UkFlex @direction="row" class="uk-flex-middle">
        <div class="uk-width-1-3">
      <Ui::Input
        id="text-spacing"
        class="uk-input"
        @type="number"
        @value={{@model.supportHeight}}
        @onChange={{fn this.setInt 'supportHeight'}}
        data-test-settings-supportHeight
      />
        </div>
        <div>&nbsp;</div>
        <div>
          <label class="uk-form-label">
            {{t "mm_unit"}}
          </label>
        </div>
      </UkFlex>
    </div>

    <div class="uk-margin">
      <label class="uk-form-label" for="text-spacing">
        {{t "text_settings.supportPadding"}}
      </label>
      <UkFlex @direction="row" class="uk-flex-middle">
        <div class="uk-width-1-3">
      <Ui::Input
        id="text-spacing"
        class="uk-input"
        @type="number"
        @value={{@model.supportPadding}}
        @onChange={{fn this.setInt 'supportPadding'}}
        data-test-settings-supportPadding
      />
        </div>
        <div>&nbsp;</div>
        <div>
          <label class="uk-form-label">
            {{t "mm_unit"}}
          </label>
        </div>
      </UkFlex>
    </div>
  {{/if}}
</fieldset>